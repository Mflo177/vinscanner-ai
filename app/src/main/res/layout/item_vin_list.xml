<?xml version="1.0" encoding="utf-8"?>

<!--
    ==========================================================
    list_item_saved_list.xml :

    Purpose:
    Defines a single card item used to display a saved list name
    inside a RecyclerView.
    ==========================================================
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp">

    <!-- ============================================
      Container Layout

      Purpose:
      Holds text and optional elements (e.g., icons).
      ============================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ============================================
          List Name Text

          Purpose:
          Displays the name of the saved list in bold, readable text.
          ============================================ -->
        <TextView
            android:id="@+id/id_text_listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Name"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>