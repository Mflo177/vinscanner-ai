<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_vin_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="ID"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_vin_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="VIN Number"
                android:textSize="16sp"
                android:gravity="left" />

            <TextView
                android:id="@+id/id_lot_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lot Location"
                android:textSize="14sp"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/id_notes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes:"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/id_extra_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Extra Notes"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:gravity="left" />

            <TextView
                android:id="@+id/id_space_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Space Number"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:gravity="right" />


        </LinearLayout>

        <Button
            android:id="@+id/id_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Delete"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>